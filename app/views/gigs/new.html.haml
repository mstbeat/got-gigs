.body
  .wrapper.devise--wrapper
    .container
    %h2.gig got gigs?
    = form_with model: @gig, local: true do |f|
      .field
        = f.label :イベント名
        %br/
        = f.text_field :name
      .field
        = f.label :日時
        %br/
        != sprintf(f.date_select(:datetime, use_month_numbers: true, date_separator: '%s'),'年 ', '月 ') + '日'
      .field
        = f.label :場所
        %br/
        = f.text_field :location
      .field
        = f.label :ジャンル
        %br/
        = f.text_field :genre
      .field
        = f.label :募集パート
        %br/
        %label
          ボーカル
          %input{type: "checkbox", name: "gig[parts][]", value: "ボーカル", class: "field__part", include_hidden: false}
        %label
          ギター
          %input{type: "checkbox", name: "gig[parts][]", value: "ギター", class: "field__part", include_hidden: false}
        %label
          キーボード
          %input{type: "checkbox", name: "gig[parts][]", value: "キーボード", class: "field__part", include_hidden: false}
        %label
          ピアノ
          %input{type: "checkbox", name: "gig[parts][]", value: "ピアノ", class: "field__part", include_hidden: false}
        %label
          ベース
          %input{type: "checkbox", name: "gig[parts][]", value: "ベース", class: "field__part", include_hidden: false}
        %label
          ドラム
          %input{type: "checkbox", name: "gig[parts][]", value: "ドラム", class: "field__part", include_hidden: false}
        %label
          その他
          %input{type: "text_field", name: "gig[parts][]", value: nil}
      -# = f.fields_for :parts do |i|
      -#   .field
      -#     = f.label :募集パート
      -#     %br/
      -#     = i.text_field :name
      .field
        = f.label :YouTube, "参考動画（YouTube）"
        %br/
        = f.text_field :youtube, placeholder: "https://www.youtube.com/XXXXXXXXXXX", size: "40"
        = f.submit "投稿", class: "btn btn-primary"